<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:text="线性布局:竖直方向排列演示"
    android:textSize="15dp"
    android:layout_marginTop="12dp"

    android:gravity="center_horizontal"
    />
 <!-- 垂直方向嵌套布局1 -->

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:orientation="vertical"
       android:layout_marginTop="10dp"
       >

    <TextView
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff281b"
        android:text="红色"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff7d1b"
        android:text="橙色"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/v_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f5fc1a"
        android:text="黄色"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/v_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#9ae518"
        android:text="绿色"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/v_5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1699d1"
        android:text="蓝色"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/v_6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#aa16d1"
        android:text="紫色"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
   </LinearLayout>


 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="线性布局:水平方向排列演示"
     android:textSize="15dp"

     android:gravity="center_horizontal"
     android:layout_marginTop="10dp"
     />


 <!-- 水平嵌套布局2 -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal"
     android:layout_marginTop="20dp">

  <TextView
      android:id="@+id/vv_1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:background="#ff281b"
      android:text="红色"
      android:layout_margin="3dp"
      android:gravity="center"
      android:layout_weight="1"
      />


  <TextView
      android:id="@+id/vv_2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="#ff7d1b"
      android:text="橙色"
      android:layout_margin="3dp"

      android:gravity="center"
      />
  <TextView
      android:id="@+id/vv_3"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:background="#f5fc1a"
      android:text="黄色"
      android:layout_margin="3dp"

      android:gravity="center"
      android:layout_weight="1"
      />

  <TextView
      android:id="@+id/vv_4"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="3dp"
      android:layout_weight="1"
      android:background="#9ae518"
      android:gravity="center"
      android:text="绿色" />

  <TextView
      android:id="@+id/vv_5"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:background="#1699d1"
      android:text="蓝色"
      android:layout_margin="3dp"
      android:gravity="center"
      android:layout_weight="1"
      />

  <TextView
      android:id="@+id/vv_6"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:background="#aa16d1"
      android:text="紫色"
      android:layout_margin="3dp"
      android:gravity="center"
      android:layout_weight="1"
      />
      />

 </LinearLayout>


</LinearLayout>